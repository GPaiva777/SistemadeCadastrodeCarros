package com.exemplo.carro.service;
// faz a importação das bibliotecas necessárias para a criação do serviço de carro
import com.exemplo.carro.model.Carro;
import com.exemplo.carro.repository.CarroRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;
import java.util.Optional;
// Indica que essa classe é um serviço do Spring, ou seja, contém a lógica de negócio 
@Service
public class CarroService {
    //injeção de dependência do repositório de carro
    @Autowired
    private CarroRepository repository;

    public List<Carro> listarTodos() {
        return repository.findAll();
    }

    public Optional<Carro> buscarPorId(Long id) {
        return repository.findById(id);
    }

    public Carro salvar(Carro carro) {
        return repository.save(carro);
    }

    public void deletar(Long id) {
        repository.deleteById(id);
    }
}